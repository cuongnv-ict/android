<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:visibility="invisible"
            />
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >  
        <LinearLayout
             android:id="@+id/list"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             >
             <LinearLayout 
                  android:layout_width="fill_parent"
             	  android:layout_height="45dip"
             	  android:orientation="horizontal"
                 >
                 <ImageButton
                     android:id="@+id/add_contact"
                     android:layout_width="wrap_content"
                      android:layout_height="45dip"
                     android:src="@drawable/add_contact"
                     />
                 <EditText
                     android:layout_width="fill_parent"
                      android:layout_height="45dip"
                     android:hint="Nhập từ khóa tìm kiếm"
                     />
            </LinearLayout>
             <ListView
                 android:id="@+id/list_show"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 />
              
	   	</LinearLayout>
	    	<LinearLayout
	   	    android:id="@+id/setting"
	   	    android:layout_width="fill_parent"
	   	    android:layout_height="wrap_content"
	   	    android:orientation="vertical"
	   	    
	   	    >
	           <ImageView
	                android:id="@+id/login_dropbox"
	                android:layout_width="fill_parent"
	                android:layout_height="45dip"
	                android:background="@drawable/login_dropbox"
	                android:layout_marginTop="7dip"
	                />
	            <ImageView
	                android:id="@+id/update_contact_machine"
	                android:layout_width="fill_parent"
	                android:layout_height="45dip"
	                android:background="@drawable/update_contact_machine"
	                android:layout_marginTop="7dip"
	                /> 
	           <!--<ImageView
	                android:id="@+id/update_contact_dropbox"
	                android:layout_width="fill_parent"
	                android:layout_height="40dip"
	                android:src="@drawable/update_contact_dropbox"
	                android:layout_marginTop="7dip"
	                /> -->
	             <ImageView
	                android:id="@+id/up_dropbox"
	                android:layout_width="fill_parent"
	                android:layout_height="45dip"
	                android:background="@drawable/up_dropbox"
	                android:layout_marginTop="7dip"
	                />
	             <ImageView
	                android:id="@+id/backup_dropbox"
	                android:layout_width="fill_parent"
	                android:layout_height="45dip"
	                android:background="@drawable/backup_dropbox"
	                android:layout_marginTop="7dip"
	                />   
	   		  </LinearLayout>
	                
	   	</LinearLayout>     
        </FrameLayout>
        <LinearLayout
                 android:layout_width="fill_parent"
             	  android:layout_height="wrap_content"
             	  android:orientation="horizontal"
             	  android:layout_alignParentBottom="true"
                 >
                 <ImageView
                     android:id="@+id/btn_contact"
                     android:layout_width="fill_parent"
                     android:layout_height="45dip"
                     android:layout_weight="0.5"
                     android:background="@drawable/btn_contact_click"
                     />

                 <ImageView
                     android:id="@+id/btn_setting"
                     android:layout_width="fill_parent"
                     android:layout_height="45dip"
                     android:layout_weight="0.5"
                     android:background="@drawable/btn_setting" />

         </LinearLayout>          
    </RelativeLayout>    
</TabHost>
